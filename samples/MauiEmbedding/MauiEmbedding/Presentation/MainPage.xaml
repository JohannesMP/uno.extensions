<Page
	x:Class="MauiEmbedding.Presentation.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	NavigationCacheMode="Required"
	Background="{ThemeResource BackgroundBrush}"
	mc:Ignorable="d">

	<StackPanel
		HorizontalAlignment="Center"
		VerticalAlignment="Center"
		Spacing="10">
		<Button Click="{x:Bind Vm.GoToMauiControls}" Content="Maui simple controls" />
		<Button Click="{x:Bind Vm.GoToCommunityToolkitMauiControls}" Content="CommunityToolkit.Maui controls" />
		<Button Click="{x:Bind Vm.GoToMauiEssentialsApi}" Content="Maui.Essentials APIs" />
	</StackPanel>

</Page>
