<Page
	x:Class="MauiEmbedding.Presentation.MauiEssentialsPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:embed="using:Uno.Extensions.Maui"
	xmlns:local="using:MauiEmbedding.Presentation"
	xmlns:maui="using:Microsoft.Maui.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:uen="using:Uno.Extensions.Navigation.UI"
	xmlns:utu="using:Uno.Toolkit.UI"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
	NavigationCacheMode="Required"
	mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<utu:NavigationBar Content="Maui Essentials APIs" />

		<StackPanel
			Grid.Row="1"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			Spacing="10">
			<TextBlock FontSize="24" Text="{Binding BatteryLevelText}" />
			<TextBlock FontSize="24" Text="{Binding DisplayInfo}" />
		</StackPanel>
	</Grid>
</Page>
