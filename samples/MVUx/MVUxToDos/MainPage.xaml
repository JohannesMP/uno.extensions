<Page
    x:Class="MVUxToDos.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:MVUxToDos.Views">

    <TabView>

        <!-- scalar -->
        
        <TabViewItem Header="Read-only scalar value using feed">
            <views:ReadOnlyScalarView />
        </TabViewItem>

        <TabViewItem Header="Read-only scalar value using feed with loading gesture and refresh button">
            <views:ReadOnlyScalarLoadRefreshView />
        </TabViewItem>
        

        
        <!-- collection -->
        
        <TabViewItem Header="Read-only collection using feed">
            <views:ReadOnlyCollectionView />
        </TabViewItem>

    </TabView>
</Page>
