<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks Condition="$([MSBuild]::IsOSPlatform('Windows')) or '$(EnableWindowsTargeting)' == 'true'">$(TargetFrameworks);net7.0-windows10.0.18362</TargetFrameworks>
    <!--TargetFrameworks>$(TargetFrameworks);net7.0</TargetFrameworks>
		<CanUseMobileTargets Condition="!$([MSBuild]::IsOSPlatform('Linux'))">true</_CanUseMobileTargets>

		<TargetFrameworks Condition="'$(_CanUseMobileTargets)'=='true'">$(TargetFrameworks);net7.0-android</TargetFrameworks>
		<TargetFrameworks Condition="'$(_CanUseMobileTargets)'=='true'">$(TargetFrameworks);net7.0-ios</TargetFrameworks>
		<TargetFrameworks Condition="'$(_CanUseMobileTargets)'=='true'">$(TargetFrameworks);net7.0-maccatalyst</TargetFrameworks-->

    <DefaultLanguage>en</DefaultLanguage>
    
    <!--SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'ios'">14.2</SupportedOSPlatformVersion>
    <SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'maccatalyst'">14.0</SupportedOSPlatformVersion>
    <SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">21.0</SupportedOSPlatformVersion>
    <SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.18362.0</SupportedOSPlatformVersion>
    <TargetPlatformMinVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.18362.0</TargetPlatformMinVersion-->
  </PropertyGroup>
  <PropertyGroup>
    <!-- Ensures the .xr.xml files are generated in a proper layout folder -->
    <GenerateLibraryLayout>true</GenerateLibraryLayout>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="7.0.0" />
    <PackageReference Include="Uno.Core.Extensions.Logging.Singleton" Version="4.0.1" />
    <PackageReference Include="Uno.Extensions.Reactive.WinUI" Version="2.3.0-dev.694" />
    <PackageReference Include="Uno.WinUI" Version="4.7.37" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)'=='net7.0-windows10.0.18362'">
    <PackageReference Include="Microsoft.WindowsAppSDK" Version="1.1.3" />
    <FrameworkReference Update="Microsoft.Windows.SDK.NET.Ref" RuntimeFrameworkVersion="10.0.22000.24" />
    <FrameworkReference Update="Microsoft.Windows.SDK.NET.Ref" TargetingPackVersion="10.0.22000.24" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)'!='net7.0-windows10.0.18362'">
    <Content Include="Assets\**" />
    <Page Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
    <ApplicationDefinition Include="App.xaml" Condition="exists('App.xaml')" />
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <UpToDateCheckInput Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Styles\FeedView.xaml" />
    <None Remove="Views\ReadOnlyClassLoadRefreshView.xaml" />
    <None Remove="Views\ReadOnlyCollectionView.xaml" />
    <None Remove="Views\ReadOnlyPrimitiveView.xaml" />
    <None Remove="Views\ReadOnlyPrimitiveWAttributeLoadRefreshView.xaml" />
    <None Remove="Views\ReadOnlyRecordView.xaml" />
    <None Remove="Views\ReadWriteClassView.xaml" />
    <None Remove="Views\ReadWriteCollectionView.xaml" />
  </ItemGroup>
  <ItemGroup>
    <UpToDateCheckInput Remove="Styles\FeedView.xaml" />
    <UpToDateCheckInput Remove="Views\ReadOnlyClassLoadRefreshView.xaml" />
    <UpToDateCheckInput Remove="Views\ReadOnlyCollectionView.xaml" />
    <UpToDateCheckInput Remove="Views\ReadOnlyPrimitiveView.xaml" />
    <UpToDateCheckInput Remove="Views\ReadOnlyPrimitiveWAttributeLoadRefreshView.xaml" />
    <UpToDateCheckInput Remove="Views\ReadOnlyRecordView.xaml" />
    <UpToDateCheckInput Remove="Views\ReadWriteClassView.xaml" />
    <UpToDateCheckInput Remove="Views\ReadWriteCollectionMasterDetailView.xaml" />
    <UpToDateCheckInput Remove="Views\ReadWriteCollectionView.xaml" />
  </ItemGroup>
  <ItemGroup>
    <Page Update="Views\ReadOnlyPrimitiveWAttributeLoadRefreshView.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Views\ReadWriteCollectionMasterDetailView.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>
</Project>