    xmlns:mvux="using:Uno.Extensions.Reactive.UI">

	<StackPanel Orientation="Horizontal">


		<TextBox DataContext="{Binding Company}" PlaceholderText="Company name" Text="{Binding CompanyName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

