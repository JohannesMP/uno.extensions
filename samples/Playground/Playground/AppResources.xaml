<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 		xmlns:utu="using:Uno.Toolkit.UI">

	<ResourceDictionary.MergedDictionaries>
		<!-- Load WinUI resources -->
		<XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
		<MaterialTheme xmlns="using:Uno.Material"
			ColorOverrideSource="ms-appx:///Playground/Styles/ColorPaletteOverride.xaml"
			FontOverrideSource="ms-appx:///Playground/Styles/MaterialFontsOverride.xaml" />

		<!-- Load Uno.UI.Toolkit resources -->
		<ToolkitResources xmlns="using:Uno.Toolkit.UI" />
		<MaterialToolkitResources xmlns="using:Uno.Toolkit.UI.Material" />
	</ResourceDictionary.MergedDictionaries>
	<!-- Add resources here -->
	<Style TargetType="utu:ExtendedSplashScreen"
		   BasedOn="{StaticResource DefaultExtendedSplashScreen}">
		<Setter Property="LoadingContentTemplate">
			<Setter.Value>
				<DataTemplate>
					<Grid>
						<ProgressRing IsActive="true"
									  VerticalAlignment="Bottom"
									  HorizontalAlignment="Center"
									  Margin="0,0,0,50" />
					</Grid>
				</DataTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
