<Window x:Class="TemplateTesteWPF.Views.FrameworkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TemplateTesteWPF.Views"
        xmlns:res="clr-namespace:Microsoft.Templates.SharedResources;assembly=SharedResources"
        mc:Ignorable="d"
        Title="FrameworkWindow" Height="450" Width="800">

	<Grid>
		<Button>TEste</Button>
		<Grid>
			<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<TextBlock
            Grid.Row="0"
            Text="{x:Static res:Resources.FrameworkTitle}"
            Margin="{StaticResource Margin_L_LeftRight_M2_Top}"
            Style="{StaticResource TSTextBlockSectionTitle}" />
		<ListView
            Grid.Row="1"
            Style="{StaticResource TSListViewSingleSelection}"
            ItemsSource="{Binding Framework.Items}"
            ItemTemplate="{StaticResource TSItemTemplateBasicInfo}"
            AutomationProperties.Name="{x:Static res:Resources.AccessibilityDesignPatternList}" />
		</Grid>
	</Grid>

</Window>
