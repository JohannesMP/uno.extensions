<Page x:Class="TemplateStudio.Wizards.Views.CodingStyle"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TemplateStudio.Wizards.Views"
        xmlns:res="clr-namespace:Microsoft.Templates.SharedResources;assembly=SharedResources"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CodingStyle">

	<Grid>
		<Button>CodingStyle</Button>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<TextBlock
            Grid.Row="0"
            Text="{x:Static res:Resources.NewProjectTitleWinUIUWP}"
            Margin="{StaticResource Margin_L_LeftRight_M2_Top}"
            Style="{StaticResource TSTextBlockSectionTitle}" />
			<ListView
            Grid.Row="1"
            Style="{StaticResource TSListViewSingleSelection}"
            ItemsSource="{Binding Architecture.Items}"
            ItemTemplate="{StaticResource TSItemTemplateBasicInfo}"
            AutomationProperties.Name="{x:Static res:Resources.AccessibilityDesignPatternList}" />
		</Grid>
	</Grid>
</Page>
